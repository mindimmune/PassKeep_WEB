= provide(:title, t('buttons.reset_password_button'))

.login-panel.panel.panel-default
  .panel-heading
    %h3.panel-title= "#{t('requests.please')}, #{t('requests.enter_email')}"
  .panel-body
    = form_tag password_resets_path do
      %fieldset.m-b
        .form-group
          = email_field_tag :email, nil, placeholder: t('labels.email'), class: "form-control"
        = submit_tag t('buttons.reset_password_button'), class: "btn btn-lg btn-success btn-block"
